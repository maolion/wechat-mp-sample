@HEIGHT: 80rpx;

.starreds-page {
    .heading {
        background: #fff;
        display: flex;
        width: 100%;
        height: @HEIGHT;
        align-items: center;
        padding-left: 15rpx;
        border-bottom: 1rpx solid rgba(0, 0, 0, .15);
        font-size: 32rpx;
        color: #555;
    }

    scroll-view {
        flex: 1;
    }

    .empty-tip {
        display: flex;
        width: 100%;
        height: 100%;
        align-items: center;
        justify-content: center;
        font-size: 38rpx;
        color: rgba(0, 0, 0, .3);
    }
}
