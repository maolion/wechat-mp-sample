@import "../../../../constants.wxss";

@LANG_SELECT_HEIGHT: 80rpx;

.source-panel {
    width: 100%;
    background: #fff;
    border-bottom: 2rpx solid rgba(0, 0, 0, .3);
    position: relative;
    height: 260rpx;
    display: flex;
    flex-direction: column;
}


.source-panel .lang-select {
    display: flex;
    width: 100%;
    height: @LANG_SELECT_HEIGHT;
    border-bottom: 1rpx solid rgba(0, 0, 0, .15);
    overflow: hidden;
    align-items: center;
    justify-content: center;
    flex-direction: row;

    button {
        background: transparent;
        border-radius: 0;
        padding: 0;
        line-height: 0;
    }

    button:after {
        opacity: 0;
        border: 0;
        opacity: 0;
        border-radius: 0;
        transition: opacity ease .2s;
    }

    button.button-hover:after {
        opacity: 0.3;
    }


    .lang-btn {
        flex: 1;
        height: 100%;
        line-height: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .lang-btn text {
        line-height: 1;
        font-size: 26rpx;
        color: @MAIN_COLOR;
    }

    .lang-btn:after {
        background: @MAIN_COLOR;
    }

    .transfer-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: @LANG_SELECT_HEIGHT;
        height: 100%;
    }

    .transfer-btn .icon {
        width: 38rpx;
        height: 38rpx;
    }

    .transfer-btn:after {
        background: #888;
    }
}

.source-panel .input-placeholder {
    flex: 1;
    width: 100%;
    padding: 20rpx 35rpx;
    box-sizing: border-box;

    text {
        font-size: 36rpx;
        line-height: 1;
        color: #666;
    }
}


.source-panel .input-area {
    position: absolute;
    top: @LANG_SELECT_HEIGHT;
    left: 0;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    display: flex;
    flex-direction: column;

    .input {
        padding: 20rpx 55rpx 10rpx 35rpx;
        box-sizing: border-box;
        width: 100%;
        height: 100%;
        line-height: 1;
        font-size: 36rpx;
        transition: height ease .2s;
    }

    .translate-button {
        border-top: 1px solid rgba(0, 0, 0, .3);
        border-radius: 0;
        background: @MAIN_COLOR;
        border: none;
        flex: 1;
        width: 100%;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color linear .2s;

        &:after {
            display: none;
        }

        &.button-hover {
            background-color: darken(@MAIN_COLOR, 6%);
        }

        text {
            line-height: 1;
            font-size: 30rpx;
            color: #fff;
        }
    }

    .close-button {
        position: absolute;
        top: 0;
        right: 0;
        width: 64rpx;
        height: 64rpx;
        background-color: transparent;
        border-radius: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .close-button .icon {
        display: block;
        width: 24rpx;
        height: 24rpx;
        transition: opacity linear .2s;
    }

    .close-button.button-hover .icon {
        opacity: .3;
    }

    .close-button:after {
        display: none;
    }

}

.home-page.is-typing .source-panel {
    height: 300rpx;
}

.home-page.is-typing .source-panel .input-area {
    .input {
        height: 150rpx;
    }
}
